// https://zed.dev/docs/configuring-zed
{
  "agent": { "default_profile": "ask" },
  "autosave": "on_focus_change",
  "buffer_font_family": "Hack Nerd Font",
  "buffer_font_features": { "calt": false },
  "buffer_font_size": 14,
  "buffer_line_height": { "custom": 2.1 },
  "code_actions_on_format": { "source.fixAll.eslint": true },
  "collaboration_panel": { "button": false },
  "colorize_brackets": true,
  "current_line_highlight": "all",
  "disable_ai": true,
  "double_click_in_multibuffer": "select",
  "edit_predictions": {
    "copilot": {
      "enterprise_uri": null,
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false,
    "mode": "subtle"
  },
  "ensure_final_newline_on_save": true,
  "features": { "edit_prediction_provider": "zed" },
  "git": { "inline_blame": { "enabled": false } },
  "git_panel": { "sort_by_path": false, "dock": "left" },
  "hidden_files": [
    "**/*-lock*",
    "**/*.class",
    "**/*.egg*",
    "**/*.env",
    "**/*.lock*",
    "**/*.tsbuildinfo",
    "**/*env.d.ts",
    "**/*log",
    "**/__*",
    "**/artisan",
    "**/azure*yml",
    "**/build",
    "**/Cargo.lock",
    "**/coverage",
    "**/dist",
    "**/LICENSE*",
    "**/node_modules",
    "**/phpunit.xml",
    "**/pnpm-lock*",
    "**/sentry*",
    "**/target",
    "**/vendor",
    "**/venv",
    ".*"
  ],
  "icon_theme": {
    "dark": "Catppuccin Mocha",
    "light": "Catppuccin Latte",
    "mode": "system"
  },
  "indent_guides": { "enabled": true },
  "inline_code_actions": false,
  "languages": {
    "Astro": { "language_servers": ["eslint", "..."] },
    "CSS": { "language_servers": ["vtsls", "..."] },
    "JSON": { "language_servers": ["vacuum", "..."] }
  },
  "lsp": {
    "json-language-server": {
      "settings": {
        "json": {
          "schemas": [
            {
              "fileMatch": ["**/openapi.json"],
              "url": "https://spec.openapis.org/oas/3.0/schema/2021-09-28"
            }
          ]
        }
      }
    }
  },
  "outline_panel": { "button": false },
  "profiles": {
    "Focus": {
      "buffer_font_size": 18,
      "current_line_highlight": "none",
      "gutter": {
        "breakpoints": false,
        "folds": false,
        "line_numbers": false,
        "min_line_number_digits": 0,
        "runnables": false
      },
      "indent_guides": { "enabled": false },
      "scrollbar": {
        "cursors": false,
        "diagnostics": "none",
        "git_diff": false,
        "search_results": false,
        "selected_symbol": false,
        "show": "never"
      },
      "tab_bar": { "show": false },
      "toolbar": { "breadcrumbs": false, "quick_actions": false }
    },
    "Sharing": {
      "buffer_font_size": 26,
      "project_panel": { "indent_size": 20 },
      "ui_font_size": 26
    }
  },
  "project_panel": {
    "auto_fold_dirs": true,
    "dock": "right",
    "entry_spacing": "comfortable",
    "folder_icons": true,
    "hide_hidden": true,
    "hide_root": false,
    "indent_size": 16,
    "show_diagnostics": "off"
  },
  "remove_trailing_whitespace_on_save": true,
  "search": { "button": false },
  "show_edit_predictions": false,
  "ssh_connections": [
    {
      "args": [],
      "host": "axo",
      "projects": [{ "paths": ["/home/zak"] }],
      "username": "zak"
    }
  ],
  "tab_bar": { "show_nav_history_buttons": false },
  "tab_size": 2,
  "tabs": {
    "activate_on_close": "neighbour",
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "telemetry": { "diagnostics": false, "metrics": false },
  "terminal": {
    "line_height": { "custom": 1.6 },
    "shell": { "program": "nu" }
  },
  "theme": {
    "dark": "One Dark",
    "light": "One Light",
    "mode": "system"
  },
  "ui_font_family": ".ZedSans",
  "ui_font_size": 16,
  "vertical_scroll_margin": 6,
  "vim": { "toggle_relative_line_numbers": true },
  "vim_mode": false
}
