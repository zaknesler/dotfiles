{
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "arrowParens": "avoid",
  "vueIndentScriptAndStyle": true,
  "bracketSpacing": true,
  "htmlWhitespaceSensitivity": "css",
  "proseWrap": "never",
  "printWidth": 120,
  "overrides": [
    {
      "files": ["{settings,composer,package-lock}.json", "{composer,yarn}.lock"],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": ["{postcss,tailwind}.config.js", "webpack.mix.js"],
      "options": {
        "printWidth": 80
      }
    }
  ]
}
